<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.projects.ProjectsFragment">

    <!-- AppBarLayout fixo no topo -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        style="@style/DefaultAppBarStyle">

        <!-- T칤tulo principal exibindo a quantidade de projetos atuais -->
        <TextView
            android:id="@+id/textRepositoryCount"
            style="@style/TitleSectionStyle"
            tools:text="游늭 Exibindo 10 projetos de 100 no total" />

        <!-- Campo de busca para filtrar projetos pelo nome -->
        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_by_name"
            android:inputType="text"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="2">

            <!-- Spinner para selecionar filtro de linguagem de programa칞칚o -->
            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1" />

            <!-- Bot칚o para escolher o tipo de ordena칞칚o dos projetos -->
            <Button
                android:id="@+id/buttonSort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/dark_gray"
                tools:text="Exibindo: Recentes" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Conte칰do principal: RecyclerView + pagina칞칚o -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- RecyclerView para exibir a lista de projetos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerProjects"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="12dp" />

        <!-- Controles de pagina칞칚o fixos abaixo -->
        <LinearLayout
            android:id="@+id/layoutPagination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pagination_bg"
            android:clipToPadding="false"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Bot칚o para p치gina anterior -->
            <ImageButton
                android:id="@+id/buttonPreviousPage"
                style="@style/PaginationButton"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/previous"
                android:src="@drawable/ic_arrow_left" />

            <!-- Texto mostrando a p치gina atual e o total de p치ginas -->
            <TextView
                android:id="@+id/textPageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_page_indicator"
                android:textColor="@color/page_indicator"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_regular"
                tools:text="P치gina 1 de 10" />

            <!-- Bot칚o para p치gina seguinte -->
            <ImageButton
                android:id="@+id/buttonNextPage"
                style="@style/PaginationButton"
                android:contentDescription="@string/next"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>
    </LinearLayout>

    <!-- Layout de erro -->
    <LinearLayout
        android:id="@+id/layoutError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Texto exibindo a mensagem de erro -->
        <TextView
            android:id="@+id/textError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="@string/error_loading_data" />

        <!-- Bot칚o "Tentar Novamente" -->
        <Button
            android:id="@+id/buttonRetry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/dark_gray"
            android:contentDescription="@string/accessibility_try_again"
            android:text="@string/try_again"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Anima칞칚o de carregamento exibida durante busca de projetos -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLoadingProjects"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_projects_animation"
        tools:visibility="visible" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
